<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextPrimary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="textSize">tertiary</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">theme</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="CollapsingToolbarCollapsedText">
        <item name="textSize">toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingToolbarExpandedText">
        <item name="android:textSize">44dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScheduledSampleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle_outline_22dp</item>
        <item name="android:backgroundTint">?android:attr/divider</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/cornercircle</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="BottomSheetDialog" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
